<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- Connection details for JDBC -->
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">onepiece1uffi</property>

        <!-- SQL dialect for hibernate -->
        <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>

        <property name="connection.pool_size">5</property>

        <property name="show_sql">true</property>

        <!-- Set current session context -->
        <property name="current_session_context_class">thread</property>

        <property name="hbm2ddl.auto">update</property>

        <mapping class="kg.itschool.airtickets.entity.Passenger"/>
        <mapping class="kg.itschool.airtickets.entity.Plane"/>

    </session-factory>
</hibernate-configuration>